    "version": "0.2.0",
    "configurations": [
        {
            "name":"qemu_riscv_tc",
            "type":"cppdbg",
            "request": "launch",
            "targetArchitecture": "x86_64",
            "program": "${workspaceRoot}/output/qemu/bin/qemu-system-riscv64",
            "args": [
                "-M",
                "virt",
                "-m",
                "1G",
                "-smp",
                "8",
                "-nographic",
                "--parallel",
                "none",

            ],
            "stopAtEntry": false,
            "externalConsole": true,
            "cwd": "${workspaceRoot}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]

        }
    ]
}